generator client {
  provider = "prisma-client-js"
  output   = "./app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Property {
  id        String   @id @default(uuid())
  title     String
  description String
  price     Int?
  location  String
  image     String
  status    String?
  paragraph String?
  createdAt DateTime @default(now())


  
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String
  message   String
}
model profile {
  id        String   @id @default(uuid())
  name      String
  phone     String?
  email     String
  image     String
  description String
  paragraph String
  quatation String?
}